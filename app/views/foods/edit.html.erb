<h1>メニューを編集する</h1>
<%= form_for @food do |f| %>
  <form>
    <%= f.hidden_field :cock_id, :value => current_cock.id %>
    <div class="form-group">
      <%= f.label :image, "画像をアップロード" %><br>
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :title, "メニューの名前" %><br>
      <%= f.text_field :title, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :content, "メニューの説明" %><br>
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <%= f.submit "更新する", class: "btn btn-primary" %>
  </form>
<% end %>
