<h2>メニューを追加する</h2>
<form>
  <%= form_for @food do |f| %>
    <%= f.hidden_field :cock_id, :value => current_cock.id %>
    <div class="form-group">
      <%= f.label :image, "画像をアップロード" %><br>
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :title, "メニューの名前" %><br>
      <%= f.text_field :title, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :content, "メニューの説明" %><br>
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <%= f.submit "追加する", class: "btn btn-primary" %>
  <% end %>
</form>
